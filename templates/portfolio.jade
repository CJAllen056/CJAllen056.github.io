
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block header
  h1= page.title
  a(target="_blank" href=page.metadata.address) site
  a(target="_blank" href=page.metadata.github) github
  p tech: #{ page.metadata.tech }

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) &laquo; Full blog
