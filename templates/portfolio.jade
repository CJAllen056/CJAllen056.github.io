
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block header
  h1= page.title
  ul
    li
      a(target="_blank" href=page.metadata.address) Site
    li
      a(target="_blank" href=page.metadata.github) GitHub
  p <strong>Tech:</strong> #{ page.metadata.tech }

block content
  img.portfolio-image(src=page.metadata.image alt=page.title+" image")
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) &laquo; Back
